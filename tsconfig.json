{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"lib": ["ES2022", "DOM"],
		"moduleResolution": "bundler",
		"baseUrl": ".",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"allowArbitraryExtensions": true,
		"types": ["vite/client", "node"],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"src/env.d.ts",
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.vue",
		"shims-vue.d.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		".vite",
		"src/backups/**",
		"src/**/_*"
	]
}
